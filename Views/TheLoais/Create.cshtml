@model ThuVien.Models.TheLoai

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hệ thống thư viện THPT Phú Bình</title>
    <link rel="stylesheet" href="~/assets/fonts/fontawesome-free-6.1.1/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/normalize.min.css">
    <link rel="stylesheet" href="~/assets/css/base.css">
    <link rel="stylesheet" href="~/assets/css/main.css">
    <link rel="stylesheet" href="~/assets/css/header_menu.css">
    <link rel="stylesheet" href="~/assets/css/container.css">


    <style>
        .container__content {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .form__tt {
            margin-top: 10px;
            margin-bottom: 10px;
            width: 600px;
            height: 30px;
            font-size: 16px;
        }

        .title_Form {
            height: 30px;
            font-size: 24px;
        }

        .btn__add {
            font-size: 20px;
            width: 300px;
            height: 40px;
            margin: 30px auto 30px auto;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #333;
        }

            .btn__add:hover {
                border: 1px solid var(--border-color);
                box-shadow: 1px 2px 3px var(--border-color);
                background-color: #f6f8fc;
            }

        .color__danger {
            color: red;
        }
    </style>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    
    <div class="app">
        <div class="header">
            <div class="grid">
                <!-- Header with search -->
                <div class="header-with-search">
                    <div class="header__logo">
                        <img src="~/assets/img/logo.png" alt="" class="header__logo-img">
                        <h1 class="header__logo-title">THƯ VIỆN<br>TRƯỜNG THPT PHÚ BÌNH</h1>
                    </div>

                    <div class="header__search">
                        <input type="text" class="auth-form__input search-input" id="" name="" placeholder="Tìm kiếm">
                        <i class="fa-solid fa-magnifying-glass search-icon"></i>
                    </div>

                    <a class="header__menu">
                        <i class="fa-solid fa-bars menu_icon"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="container">



            <div class="grid container__content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="title_Form">Form thêm thể loại</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaTL, htmlAttributes: new { @class = "control-label col-md-2 form__tt" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MaTL, new { htmlAttributes = new { @class = "form-control form__tt" } })
                                @Html.ValidationMessageFor(model => model.MaTL, "", new { @class = "text-danger form__tt color__danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TenTL, htmlAttributes: new { @class = "control-label col-md-2 form__tt" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenTL, new { htmlAttributes = new { @class = "form-control form__tt" } })
                                @Html.ValidationMessageFor(model => model.TenTL, "", new { @class = "text-danger form__tt form__tt color__danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit" class="btn btn-default btn__add" style="background-color: var(--primary-color); color: var(--white-color) "/>
                            </div>
                        </div>
                    </div>
                }

                <div class="btn__add" style="margin-top: 0">
                    @Html.ActionLink("Quay Lại", "Index")
                </div>




            </div>
        </div>

        <div class="footer">

        </div>
    </div>
</body>
</html>
